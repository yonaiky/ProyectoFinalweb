@model IEnumerable<ProyectoFinal.Models.Socio>

@{
    ViewBag.Title = "Index";
}

    <h2 class="text-info">Listado de Socios</h2>

<p>
   
        @Html.ActionLink("Create New", "Create",null, new { @class = "btn btn-primary btn-large" })
   
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Apellido)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cedula)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Foto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Direccion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Telefono)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sexo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Edad)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FechaNacimiento)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Afiliados)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Membresia)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LugarTrabajo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DireccionOficina)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TelefonoOficina)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EstadoMembresia)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FechaIngreso)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FechaSalida)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Apellido)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cedula)
        </td>
        <td>
            @if (!string.IsNullOrEmpty(item.Foto))
            {
                <img src="@Url.Content(item.Foto)" alt="Image" style="height:50px;width:100px;" />
            }
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Direccion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Telefono)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Sexo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Edad)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FechaNacimiento)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Afiliados)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Membresia)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LugarTrabajo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DireccionOficina)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TelefonoOficina)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EstadoMembresia)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FechaIngreso)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FechaSalida)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.SocioID }, new { @class = "btn btn-info" }) 
            @Html.ActionLink("Details", "Details", new { id=item.SocioID },  new { @class = "btn btn-warning" }) 
            @Html.ActionLink("Delete", "Delete", new { id=item.SocioID }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
